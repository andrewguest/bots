apiVersion: v1
kind: Secret
metadata:
  name: steam-game-picker-bot-secrets
  namespace: steam-game-picker-bot-namespace
type: Opaque
stringData:
  # Base64 encoded Discord token
  STEAM_GAME_PICKER_DISCORD_TOKEN: <Discord token here>

  # Directory to store logs in
  STEAM_GAME_PICKER_LOGGING_DIR: /steam-game-picker-bot/logs

  # Logging format
  STEAM_GAME_PICKER_LOGFILE_NAME_FORMAT: "%(asctime)s %(name)s %(levelname)s %(message)s"
